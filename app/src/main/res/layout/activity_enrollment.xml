<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enrollContainer"
        android:background="@color/white"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/enrollText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/processing_enrollment"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/useMobilePinTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enrollText"
            android:layout_marginTop="100dp"
            android:text="Use mobile PIN? "
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ToggleButton
            android:id="@+id/useMobilePinTBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/useMobilePinTxt"
            android:layout_toRightOf="@+id/useMobilePinTxt"
            android:layout_marginLeft="10dp"
            android:text="ToggleButton"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/projectIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enrollText"
            android:layout_marginTop="150dp"
            android:text="@string/input_your_project_id"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/projectIdEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectIdTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:ems="10" android:inputType=""/>

        <Button
            android:id="@+id/startEnrolBtn"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectIdEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Start" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />



    </RelativeLayout>

</ScrollView>
